{
  "name": "idumb-v2",
  "version": "2.2.0",
  "description": "Intelligent Delegation Using Managed Boundaries â€” an AI knowledge work platform built on OpenCode",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "idumb-v2": "./bin/cli.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin",
    "src/**/*.ts",
    "!src/dashboard/frontend",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "tsx tests/init.test.ts && tsx tests/persistence.test.ts && tsx tests/task.test.ts && tsx tests/delegation.test.ts && tsx tests/planning-registry.test.ts && tsx tests/work-plan.test.ts && tsx tests/task-graph.test.ts && tsx tests/plan-state.test.ts && tsx tests/smoke-code-quality.ts && tsx tests/sqlite-adapter.test.ts",
    "prepare": "tsc || true",
    "prepublishOnly": "npm run typecheck && npm test && npm run build",
    "user-stories:verify": "npx tsx scripts/verify-user-stories.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "opencode",
    "ai-governance",
    "agent",
    "llm",
    "knowledge-work",
    "multi-agent",
    "context-management"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shynlee04/idumb-v2.git"
  },
  "homepage": "https://github.com/shynlee04/idumb-v2#readme",
  "bugs": {
    "url": "https://github.com/shynlee04/idumb-v2/issues"
  },
  "author": "shynlee04",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "chokidar": "^4.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "open": "^10.1.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/ws": "^8.5.10",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18"
  }
