{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "explore": {
      "model": "zai-coding-plan/glm-4.7"
    }
  },
  "plugin": [
    "hivemind-context-governance"
  ],
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "enabled": true
    },
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/sse",
      "enabled": true
    },
    "sequentialthinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "tavily": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "tavily-mcp@0.2.3"
      ],
      "environment": {
        "TAVILY_API_KEY": "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"
      },
      "enabled": true
    },
    "exa": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "exa-mcp-server"
      ],
      "environment": {
        "EXA_API_KEY": "0f87e4ce-23ed-4bb1-85b2-2bf04ae7caba"
      },
      "enabled": true
    },
    "repomix": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "repomix",
        "--mcp"
      ],
      "enabled": true
    }
  }
}
